#define BLYNK_PRINT Serial
#include <WiFi.h>
#include <WiFiClient.h>
#include <BlynkSimpleEsp32.h>
int pin = 2;
char auth[] = "OPT8_-5ZNnK-goG3Mk_UdlyFN1qj7mXb";       // You should get Auth Token in the Blynk App.
char ssid[] = "Hostel";                    // Your Wi-Fi Credentials
char pass[] = "aadarsh@&100";
void setup() {  
  pinMode(pin, OUTPUT); 
  pinMode(pin, HIGH);
  Serial.begin(115200);
  delay(10);
  Serial.print("Connecting to ");
  Serial.println(ssid);
  WiFi.begin(ssid, pass);
  int wifi_ctr = 0;
  while (WiFi.status() != WL_CONNECTED) {
  delay(500);
  Serial.print(".");
  }
  Serial.println("WiFi connected");  
  Blynk.begin("OPT8_-5ZNnK-goG3Mk_UdlyFN1qj7mXb", ssid, pass);
}
void loop(){
    Blynk.run();
}